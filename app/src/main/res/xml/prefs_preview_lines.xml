<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:title="@string/pref_preview_lines">

    <PreferenceCategory app:title="@string/pref_preview_lines_list_layout">

        <SeekBarPreference
            android:defaultValue="5"
            android:max="20"
            app:key="preview_lines_text_list"
            app:min="0"
            app:showSeekBarValue="true"
            app:title="@string/pref_preview_lines_text" />

        <SeekBarPreference
            android:defaultValue="5"
            android:max="20"
            app:key="preview_lines_list_list"
            app:min="0"
            app:showSeekBarValue="true"
            app:title="@string/pref_preview_lines_list" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/pref_preview_lines_grid_layout">

        <SeekBarPreference
            android:defaultValue="10"
            android:max="20"
            app:key="preview_lines_text_grid"
            app:min="0"
            app:showSeekBarValue="true"
            app:title="@string/pref_preview_lines_text" />

        <SeekBarPreference
            android:defaultValue="10"
            android:max="20"
            app:key="preview_lines_list_grid"
            app:min="0"
            app:showSeekBarValue="true"
            app:title="@string/pref_preview_lines_list" />

    </PreferenceCategory>

</PreferenceScreen>
